
# -*- python -*-

Module('caba:vci_uart',
       classname = 'soclib::caba::VciUart',
       tmpl_parameters = [
	parameter.Module('vci_param',  default = 'caba:vci_param'),
	],
       header_files = ['../source/include/vci_uart.h',],
       interface_files = ['../../include/soclib/uart.h',],
       implementation_files = ['../source/src/vci_uart.cpp',],
       ports = [
	Port('caba:vci_target', 'p_vci'),
	Port('caba:bit_in', 'p_resetn', auto = 'resetn'),
	Port('caba:bit_out', 'p_irq', auto = 'irq'),
	Port('caba:bit_out', 'p_tx', auto = 'tx'),
	Port('caba:bit_in', 'p_rx', auto = 'rx'),
	Port('caba:clock_in', 'p_clk', auto = 'clock'),
	],
       uses = [
	Uses('caba:base_module'),
	Uses('caba:vci_target_fsm', default_target = 'true', support_llsc = 'false'),
	],
       instance_parameters = [
        parameter.IntTab('ident'),
        parameter.Module('mt', typename = 'common:mapping_table', auto = 'env:mapping_table'),
	],
       extensions = [
	'dsx:addressable=ident',
	'dsx:get_ident=ident:p_vci',
	'dsx:max_segments=1',
        ],
)
